<% provide(:title, "List an Item")%>
<!-- <p>Form starts here</p> -->
<%= form_for @new_product do |f| %>
  <div class="form-group">
    <%= f.label :name, value: 'Name: ' %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= f.label :category, value: 'Category: ' %>
    <%= f.select :category, ['Rings', 'Necklaces'], class: "form-control", id: "exampleFormControlSelect1" %>

  </div>
  <div class="form-group">
    <%= f.label :description, value: 'Description: ' %>
    <%= f.text_field :description, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= f.label :price, value: 'Price: ' %>
    <%= f.number_field :price, min: 1, class: "form-control", required: true %>
  </div>

  <%= f.submit%>

<% end %>
