<% provide(:title, "List an Item")%>
<!-- <p>Form starts here</p> -->
<%= form_for @new_product do |f| %>
  <div class="form-group">
    <%= f.label :name%>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= f.label :category%>
    <%= f.text_field :category, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= f.label :description%>
    <%= f.text_field :description, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= f.label :price%>
    <%= f.number_field :price, min: 1, class: "form-control", required: true %>
  </div>

  <%= f.submit%>

<% end %>
