<!-- Bootstrap Template -->

<div class="container" id="tourpackages-carousel">

  <div class="row display-flex">
    <%@all_products.each do |indiv_product| %>
      <% if indiv_product.status == 0 %>

          <div class="col-xs-18 col-sm-6 col-md-3">
            <div class="thumbnail">
              <img src="http://placehold.it/400x300" alt="">
                <div class="caption">
                  <h4><%= indiv_product.name %></h4>
                  <p>Price: <%= indiv_product.price %> credits<br></p>
                  <p class="thumbnail-des"><%= indiv_product.description %></p>
                  <p>  <%= link_to "View", product_path(indiv_product), class: "btn btn-info btn-xs"%></p>
              </div>

            </div>
          </div>
        <%end%>
    <%end%>


  </div><!-- End row -->

</div><!-- End container -->
