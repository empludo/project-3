                </div>
                <p class="view-btn">  <%= link_to "View", product_path(indiv_product), class: "btn btn-info btn-xs"%></p>

            </div>
          </div>
        </div>
      </div>
    <%end%>
  <%end%>
</div>

</div><!-- End container -->
