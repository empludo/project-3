<%= form_tag charges_path do |f| %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>

    <label class="amount">
      <span>Amount: </span>
      <input type="text" name="amount" class="deposit">
    </label>
  </article>
  <button type="submit" class="btn btn-outline-primary">Click here to Add Funds</button>
  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="<%= @description %>"
          data-amount="<%= @amount %>"
          data-email="<%= current_user.email %>"
          data-locale="auto"></script>
  <script>
    document.querySelector('.stripe-button-el').style.display = 'none'
  </script>
<% end %>
